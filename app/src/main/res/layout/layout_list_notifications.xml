<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp"
    >


  <com.tagframe.tagframe.Utils.MyTextView
      android:id="@+id/notification_user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@+id/layout_pic"
      android:gravity="center_vertical"
      android:text="Username"
      android:textColor="@color/blACK"
      android:textSize="15dp"
      />
  <com.tagframe.tagframe.Utils.MyTextView
      android:id="@+id/notification_action_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_toRightOf="@+id/notification_user_name"
      android:gravity="center_vertical"
      android:text="Did This"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="14dp"
      />

  <TextView
      android:id="@+id/notification_sub_action_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/notification_user_name"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:layout_toRightOf="@+id/layout_pic"
      android:text="Sub action name"
      android:textColor="@color/appblue"
      android:textSize="14dp"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/notification_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/notification_sub_action_name"
      android:layout_margin="5dp"
      android:text="date"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="12dp"
      />

  <RelativeLayout
      android:id="@+id/layout_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <ProgressBar
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/pbar_notImage"
        />
    <ImageView
        android:id="@+id/notification_pro_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        />
  </RelativeLayout>

</RelativeLayout>