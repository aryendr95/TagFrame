<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/notification_background"
    >

    <com.pkmmte.view.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/notification_pro_pic"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_user_name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/notification_pro_pic"
        android:text="Username"/>
    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/notification_action_type"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/notification_user_name"
        android:text="Did This"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_sub_action_name"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/appblue"
        android:layout_toRightOf="@+id/notification_pro_pic"

        android:layout_below="@+id/notification_user_name"
        android:text="Sub action name"/>



</RelativeLayout>