<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="fill_parent"
android:id="@+id/rl_list_frame"
    android:descendantFocusability="blocksDescendants"
    >



    <ImageView
        android:layout_width="150dp"
        android:layout_height="fill_parent"

        android:background="@drawable/shadow"
        android:scaleType="fitXY"

        android:id="@+id/framelist_image"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/framelist_delete"
        android:src="@drawable/cancel"
        android:focusable="false"
      android:layout_marginLeft="130dp"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#50000000"

        android:layout_alignParentBottom="true">

    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="00:00"

        android:layout_above="@+id/framelist_name"
        android:id="@+id/framelist_time"
        android:gravity="center_horizontal"
        />

    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="00:00"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:id="@+id/framelist_name"
        android:gravity="center_horizontal"
        />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rl_video_indicator">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/playvideo"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>