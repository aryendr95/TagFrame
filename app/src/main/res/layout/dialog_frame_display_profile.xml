<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="300dp"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/bottom_layout"
            android:layout_below="@+id/rl_see_event"
            android:id="@+id/framelist_image2">


            <VideoView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shadow"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:id="@+id/framelist_video"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shadow"
                android:scaleType="fitXY"


                android:id="@+id/framelist_image"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#90000000"
            android:layout_alignParentLeft="true"
            android:id="@+id/rl_see_event"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/framelist_delete"
                android:src="@drawable/done"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

            <com.tagframe.tagframe.Utils.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="See Event"
                android:textSize="17sp"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/rl_see_event"
            android:id="@+id/productimage_layout"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shadow"
                android:scaleType="fitXY"
                android:id="@+id/product_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
            <com.tagframe.tagframe.Utils.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Buy Product"
                android:background="#90000000"
                android:id="@+id/buyProduct"
                android:layout_alignParentBottom="true"
                android:textSize="17dp"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#90000000"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom_layout">


            <com.tagframe.tagframe.Utils.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="00:00"


                android:id="@+id/framelist_time"
                android:gravity="center_horizontal"
                />

            <com.tagframe.tagframe.Utils.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"

                android:hint="Frame title"
                android:textColorHint="@color/white"
                android:textSize="17dp"
                android:layout_below="@+id/framelist_time"
                android:id="@+id/framelist_name"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>


