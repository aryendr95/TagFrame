<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="left"
        android:text="Are you sure you want to delete your account permanently?"

        />

    <LinearLayout
        android:id="@+id/layout_logout_controls"
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_height="wrap_content">

        <com.tagframe.tagframe.Utils.MyTextView
            android:id="@+id/yesbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bt_dark_gray"
            android:text="Yes"
            style="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:textStyle="bold" />

        <com.tagframe.tagframe.Utils.MyTextView
            android:id="@+id/nobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/bt_dark_gray"
            android:text="No"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="20dp"
        android:id="@+id/layout_logging_out">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <com.tagframe.tagframe.Utils.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Deleting Account.."
            android:paddingBottom="10dp"/>
    </LinearLayout>

</LinearLayout>