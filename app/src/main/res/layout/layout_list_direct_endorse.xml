<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:gravity="center"
        >
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:id="@+id/list_endorse_img_product"/>

    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_endorse_img_product"
        android:text="Product Name"
        android:gravity="center"
        android:textSize="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/list_endorse_product_name"

        />
    </LinearLayout>


    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endorsed"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/txt_endorse"
        android:drawableTop="@drawable/ic_present_to_all_grey_600_24dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layout_product_image"
        >

    <com.pkmmte.view.CircularImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/list_endorse_img_user"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_endorse_img_product"
        android:text="Product Name"
        android:gravity="right"
        android:textSize="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/list_endorse_user_name"

        />
    </LinearLayout>


    <com.tagframe.tagframe.Utils.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_endorse"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/list_endorse_date"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>