<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SlidingPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"

    android:background="@color/white">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
           >



            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/img"

                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="#90000000"></RelativeLayout>


            <com.pkmmte.view.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/mod_profile_image"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/pro_image"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/mod_profile_image">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/mod_usrname"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="Username"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/mod_email"
                    android:text="email@gmail.com"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </RelativeLayout>



        <ListView
            android:id="@+id/mod_MenuList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/white"
            android:layout_marginTop="10dp"
            >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/mLayout_module"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/topbar"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/mod_menu"
                    android:src="@drawable/menu"

                    android:padding="5dp"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
               android:gravity="center"
                android:orientation="vertical">

            <com.tagframe.tagframe.Utils.Edittext
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
              android:hint="Search"
                android:singleLine="true"
                android:textColor="@color/white"
                android:id="@+id/mod_search_text"
                android:paddingBottom="5dp"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:background="@color/colorPrimary"
                android:textColorHint="@color/white"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/mod_search_text"
                    android:background="@color/white"/>
                </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:padding="6dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/mod_search"
                    android:src="@drawable/search"
                    />
            </LinearLayout>


        </LinearLayout>



        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mod_frame_layout"
            >
        </FrameLayout>

    </LinearLayout>

</android.support.v4.widget.SlidingPaneLayout>


