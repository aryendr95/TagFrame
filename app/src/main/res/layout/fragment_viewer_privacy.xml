<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viewer Privacy"
        android:textSize="25dp"


        android:textColor="@color/colorPrimary"
        android:id="@+id/checkbox_viewwer_privacy"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/checkbox_viewwer_privacy"
        android:text="Selecting Viewer Privacy will prevent future users from following you, viewing your content(TimeLine, Events, Frames, Followers, Following) and adding to your posts, without you accepting their Follow Request"
        />

</RelativeLayout>